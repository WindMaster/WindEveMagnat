<?xml version="1.0" encoding="utf-8" ?>
<sqlMap namespace="WindEveMagnat.Persistence" xmlns="http://ibatis.apache.org/mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" >
	<statements>
		<statement id="InsertTestTableRecord" parameterClass="TestTable">
			INSERT INTO TestTable(id,name) values(#id#,#name#)
		</statement>

		<statement id="DeleteTestTableRecord" parameterClass="int">
			DELETE FROM TestTable WHERE id = #id#
		</statement>
		 
		<statement id="GetTestTableRecord" resultClass="TestTable">
			SELECT id,name FROM TestTable 
		</statement>
	</statements>
</sqlMap>